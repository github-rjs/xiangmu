/* pages/index/detail/detail.wxss */
.news-img {
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}
.item-head {
  padding: 20rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.news-author-name {
  font-size: 36rpx;
  margin: 0 20rpx; 
}

.news-author-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}

.item-title {
  padding: 0 30rpx;
}

.item-content {
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  border-top: 1px solid #eeeeee;
  font-size: 28rpx;
  line-height: 48rpx;
}

.news-share {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 60rpx;
  height: 60rpx;
  margin: 30rpx;
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 100%;
  position: relative;
}
.news-share > button {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  opacity: 0;
  position: absolute;
}
.news-share > image {
  width: 40rpx;
  height: 40rpx;
}