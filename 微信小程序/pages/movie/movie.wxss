/* pages/movie.wxss */
@import "../template/template.wxss";

.movie-banner {
  width: 100%;
  height: 400rpx;
}

.movie-banner image {
  width: 100%;
}

.movie-container {
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: #ffffff;
}

.movie-container-title {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.movie-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.search {
  padding: 20rpx 30rpx 0rpx 30rpx;
}

.search input {
  height: 40rpx;
  background-color: #ffffff;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.empty-text {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #8a8a8a;
}